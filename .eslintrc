{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": [
      "airbnb"
    ],
    "parserOptions": {
        "ecmaVersion": 9,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "react/jsx-filename-extension": "off",
        "jsx-a11y/click-events-have-key-events": "off"
    }
}
